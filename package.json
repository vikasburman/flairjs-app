{
    "name": "flairjs-fabric",
    "title": "Flair.js Fabric",
    "description": "Foundation for True Object Oriented JavaScript Apps",
    "copyright": "(c) 2017-2019 Vikas Burman",
    "version": "0.55.70",
    "author": "Vikas Burman <vikasburman@gmail.com>",
    "keywords": [
        "javascript",
        "oops",
        "javascript-framework",
        "isomorphic-javascript"
    ],
    "engines": {
        "node": ">=10"
    },
    "license": "MIT",
    "link": "https://flairjs.com",
    "homepage": "https://flairjs.com",
    "repository": {
        "type": "git",
        "url": "https://github.com/vikasburman/flairjs-fabric.git"
    },
    "scripts": {
        "build": "flair build --options ./config/build/options.json",
        "build-full": "flair build --options ./config/build/options.json --full",
        "build-quick": "flair build --options ./config/build/options.json --quick",
        "package": "flair pack --options ./config/package/options.json && npm pack ./publish/package/npm",
        "test": "flair test --options ./config/test/options.json",
        "test-client": "flair test --options ./config/test/options.json --client",
        "serve": "http-server ./ -p8088 && pkill -f http-server"
    },
    "devDependencies": {
        "flairjs-cli": "^0.55.85",
        "http-server": "^0.11.1"
    },
    "peerDependencies": {
        "flairjs": "^0.55.68"
    }
}